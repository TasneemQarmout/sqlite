<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/product_name_tv"
        app:layout_constraintEnd_toStartOf="@id/delete_from_cart_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="0dp"
        android:textColor="@color/purple_500"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/product_Desc_tv"
        android:textColor="@color/purple_500"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toStartOf="@id/delete_from_cart_btn"
        app:layout_constraintTop_toBottomOf="@id/product_name_tv"
        app:layout_constraintStart_toStartOf="@id/product_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/quantity_lb"
        android:textColor="@color/purple_500"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/product_Desc_tv"
        app:layout_constraintStart_toStartOf="@id/product_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity: "
        />
    <TextView
        android:id="@+id/quantity_value_tv"
        android:layout_marginTop="4dp"
        android:textColor="@color/teal_700"
        android:layout_marginStart="4dp"
        app:layout_constraintTop_toBottomOf="@id/product_Desc_tv"
        app:layout_constraintStart_toEndOf="@id/quantity_lb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/size_lb"
        android:textColor="@color/purple_500"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/quantity_value_tv"
        app:layout_constraintStart_toStartOf="@id/product_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Size: "
        />
    <TextView
        android:id="@+id/size_value_tv"
        android:layout_marginTop="4dp"
        android:textColor="@color/teal_700"
        app:layout_constraintTop_toTopOf="@id/size_lb"
        app:layout_constraintStart_toEndOf="@id/quantity_lb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <Button
        android:id="@+id/delete_from_cart_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/product_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete From cart"
        />
</androidx.constraintlayout.widget.ConstraintLayout>